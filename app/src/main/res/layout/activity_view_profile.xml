<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewProfile">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_fname"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:text="First Name:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fname"
                android:layout_toRightOf="@id/tv_fname"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lname"
                android:layout_below="@id/tv_fname"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Last Name:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lname"
                android:layout_toRightOf="@id/tv_lname"
                android:layout_below="@id/fname"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_age"
                android:layout_below="@id/tv_lname"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Age:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:layout_toRightOf="@id/tv_age"
                android:layout_below="@id/lname"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sex"
                android:layout_below="@id/tv_age"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Sex:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sex"
                android:layout_toRightOf="@id/tv_sex"
                android:layout_below="@id/age"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:layout_below="@id/tv_sex"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Contact Number:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_toRightOf="@id/tv_phone"
                android:layout_below="@id/sex"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_address"
                android:layout_below="@id/tv_phone"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Address:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_toRightOf="@id/tv_address"
                android:layout_below="@id/phone"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dob"
                android:layout_below="@id/tv_address"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Date of Birth:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dob"
                android:layout_toRightOf="@id/tv_dob"
                android:layout_below="@id/address"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_experience"
                android:layout_below="@id/tv_dob"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Year of Work Experience:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/experience"
                android:layout_toRightOf="@id/tv_experience"
                android:layout_below="@id/dob"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email"
                android:layout_below="@id/tv_experience"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Email Id:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailID"
                android:layout_toRightOf="@id/tv_email"
                android:layout_below="@id/experience"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_doj"
                android:layout_below="@id/tv_email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Date Of Joining:"
                android:textSize="10sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doj"
                android:layout_toRightOf="@id/tv_doj"
                android:layout_below="@id/emailID"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:textSize="10sp" />

    </RelativeLayout>
</ScrollView>