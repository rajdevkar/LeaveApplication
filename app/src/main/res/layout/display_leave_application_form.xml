<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="Leave Application"
            android:textAlignment="center"
            android:textSize="15sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="Type"
            android:textAlignment="gravity" android:textColor="#5F5F5F"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text="Type"/>

    <TextView
            android:id="@+id/leavetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="gravity" android:textColor="#80807676"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text=""/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="From"
            android:textAlignment="gravity" android:textColor="#5F5F5F"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text="From"/>

    <TextView
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="gravity" android:textColor="#80807676"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text=""/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="To"
            android:textAlignment="gravity" android:textColor="#5F5F5F"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text="To"/>

    <TextView
            android:id="@+id/todate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="gravity" android:textColor="#80807676"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text=""/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="Reason"
            android:textAlignment="gravity" android:textColor="#5F5F5F"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text="Reason"/>

    <TextView
            android:id="@+id/leavereason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="gravity" android:textColor="#80807676"
            android:textSize="14sp"
            android:typeface="serif"
            tools:text=""/>

</LinearLayout>